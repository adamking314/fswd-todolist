<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <h2>Create A Task</h2>
  <div id="todo-list">
    <form id="create-task">
      <input id="new-task-content" type="text" style="color: white;" placeholder="New task" required />
      <button type="submit">Submit</button>
    </form>
    <div class="row">
      <div class="col-12">
        <h1 class="text-center mt-4">To Do List</h1>
        <div class="tabs">
        <button class="filter" data-filter="active">Active</button>
        <button class="filter" data-filter="completed">Completed</button>
        <button class="filter" data-filter="all">All</button>
      </div>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th class="col-xs-8">Task</th>
              <th class="col-xs-1">Remove</th>
              <th class="col-xs-1">Complete</th>
            </tr>
          </thead>
          <tbody id="tasks">
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
